<div class="section">
  <div class="container">
    <div class="card">
     <div class="card-content">
      <div class="columns is-centered">
        <div class="column is-5">
          <h2 class="title is-2">Sign In</h2>

          <%= form_with url: login_path, scope: :session, local: true do |form| %>
              <div class="field">
                <%= form.label :email, class: "label" %>
                <div class="control">
                  <%= form.email_field :email, required: true, autofocus: true, class: "input", placeholder: 'Your email' %>
                </div>
              </div>
              <div class="field">
                  <%= form.label :password, class: "label" %>
                <div class="control">
                  <%= form.password_field :password, required: true, class: "input", placeholder: 'Your password' %>
                </div>
              </div>
              <div class="field is-grouped">
                <div class="control">
                  <%= form.submit "Sign In", class: "button is-info is-rounded" %>
                </div>
                <div class="control">
                  <%= link_to "Cancel", recipes_path, class: 'button is-link is-light is-rounded' %>
                </div>
              </div>
          <% end %>
        </div>
    </div>
  </div>
</div>

