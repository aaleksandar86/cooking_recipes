<div class="section">
	<div class="container">
	<div class="card">
	<div class="card-content">
	<div class="columns is-centered">
		<div class="column is-4">
		<h2 class="title is-2">Sign Up</h2>

    <% if @user.errors.any? %>
      <div id="error_explanation" class="notification is-warning">
        <h2>
          <%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:
        </h2><br>
        <p>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </p>
      </div>
    <% end %>

		<%= form_with model: @user, local: true do |form| %>
	  <div class="field">
	  	<div class="control">
        <%= form.label :username, class: "label" %>
        <%= form.text_field :username, autofocus: true, class:"input", wrapper: false %>
	  	</div>
		</div>

		<div class="field">
	  	<div class="control">
        <%= form.label :email, class: "label" %>
        <%= form.email_field :email, class:"input", wrapper: false %>
	  	</div>
		</div>

    <div class="field">
	  	<div class="control">
        <%= form.label :first_name, class: "label" %>
        <%= form.text_field :first_name, autofocus: true, class:"input", wrapper: false %>
	  	</div>
		</div>

    <div class="field">
	  	<div class="control">
        <%= form.label :last_name, class: "label" %>
        <%= form.text_field :last_name, autofocus: true, class:"input", wrapper: false %>
	  	</div>
		</div>


		<div class="field">
			<div class="control">
        <%= form.label :password, class: "label" %>
				<%= form.password_field :password, class:"input", wrapper: false %>
			</div>
		</div>

		<div class="field">
			<div class="control">
        <%= form.label :password_confirmation, class: "label" %>
				<%= form.password_field :password_confirmation, class: "input", wrapper: false %>
			</div>
		</div>

		<div class="field is-grouped">
			  <div class="control">
		 		<%= form.submit "Sign up", class:"button is-info is-rounded" %>
		 	</div>
      <div class="control">
        <%= link_to "Cancel", recipes_path, class: 'button is-info is-light is-rounded' %>
      </div>
    </div>
		<% end %>
			<br />
		</div>
		</div>
	</div>
	</div>
	</div>
</div>
