<div class="container">
  <div class="columns is-multiline is-centered">
    <div class="column is-half">
      <% if ingredient.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(ingredient.errors.count, "error") %> prohibited this ingredient from being saved:
          </h2>
          <ul>
            <% @ingredient.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
</div>
<div class="section">
  <div class="container">
    <div class="title">
      ingredient:
    </div>
      <div class="field">
        <div class="control">
          <%= form_with model: [@recipe, @ingredient], local: true do |form| %>
            <%= form.text_area :ingredient_name, class: "input", placeholder: "Enter ingredient" %>
            <%= form.submit submit, class: "button" %>
            <%= link_to "Cancel", recipe_path(recipe), class: "button" %>
          <% end %>
      </div>
    </div>
  </div>
</div>
